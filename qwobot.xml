<configuration>
    <bot>
        <nick>QwoBot</nick>
    </bot>
    <options>
        <auto-reconnect>true</auto-reconnect>
        <verbose>false</verbose>
        <message-delay>250</message-delay>
    </options>
    <server>
        <host>irc.example.com</host>
        <port>6667</port>
        <channel>
            <name>#qwobot</name>
        </channel>
    </server>
    <plugins>
        <plugin class="com.sl5r0.qwobot.plugins.reddit.Reddit">
            <username></username>
            <password></password>
            <subreddit>subreddit to post to</subreddit>
        </plugin>
        <plugin class="com.sl5r0.qwobot.plugins.twitter.TweetStream">
            <channel>#qwobot</channel>
            <oauth>
                <consumer-key></consumer-key>
                <consumer-secret></consumer-secret>
                <access-token></access-token>
                <access-token-secret></access-token-secret>
            </oauth>
        </plugin>
        <plugin class="com.sl5r0.qwobot.plugins.bitcoin.BtcChecker"/>
        <plugin class="com.sl5r0.qwobot.plugins.help.Help"/>
        <plugin class="com.sl5r0.qwobot.plugins.qbux.QBuxCasino"/>
    </plugins>
</configuration>